@model NashTechListPersonMVC.Model.Models.Person

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Delete Person</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2 class="mt-5 mb-4">Delete Person</h2>
        <div>
            <h4>Are you sure you want to delete this person?</h4>
            <dl class="row">
                <dt class="col-sm-3">Full Name:</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Gender:</dt>
                <dd class="col-sm-9">@Model.Gender</dd>

                <dt class="col-sm-3">Date of Birth:</dt>
                <dd class="col-sm-9">@Model.DateOfBirth.ToShortDateString()</dd>

                <dt class="col-sm-3">Phone Number:</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Birth Place:</dt>
                <dd class="col-sm-9">@Model.BirthPlace</dd>

                <dt class="col-sm-3">Is Graduated:</dt>
                <dd class="col-sm-9">@Model.IsGraduated</dd>
            </dl>
            <form asp-action="DeletePerson" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <button asp-action="Index" class="btn btn-secondary ms-2">Cancel</button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
